---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
---

<BaseLayout
    title="404 - Page Not Found"
    description="The page you are looking for doesn't exist."
    pageType="website"
    noindex={true}
>
    <div class="flex min-h-[60vh] flex-col items-center justify-center gap-2 text-center">
        <h1 class="mb-4 font-serif text-6xl font-bold sm:text-8xl">404</h1>
        <p class="mb-2 text-xl sm:text-2xl">Page Not Found</p>
        <p class="text-main/60 mb-8 text-base sm:mb-12">The page you're looking for doesn't exist or has been moved.</p>
        <div class="flex flex-col gap-4 sm:flex-row">
            <Button href="/">Go Home</Button>
        </div>
    </div>
</BaseLayout>
